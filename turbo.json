{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CLOUDFLARE_API_TOKEN", "CLOUDFLARE_ACCOUNT_ID"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "@runner/api#emit-types"],
      "outputs": ["dist/**"]
    },
    "@runner/api#emit-types": {
      "outputs": ["dist/**"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^build"]
    },
    "deploy": {
      "dependsOn": ["^build"]
    }
  }
}
