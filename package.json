{
  "name": "runner",
  "version": "1.0.0",
  "private": true,
  "description": "Runner monorepo",
  "keywords": [],
  "license": "ISC",
  "author": "Kyle Carhart",
  "type": "module",
  "scripts": {
    "@runner/ui": "workspace:*",
    "dev": "turbo watch dev",
    "dev:dash": "turbo watch dev --filter=@runner/dash --filter=@runner/api",
    "dev:web": "turbo watch dev --filter=@runner/web --filter=@runner/api",
    "lint": "pnpm -r --bail run lint ",
    "pre-commit": "pnpm -r --workspace-concurrency=1 run pre-commit",
    "prepare": "husky",
    "prettier:write": "prettier --write ."
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.11",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.10",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": "22",
    "pnpm": "10"
  }
}
