---
export const prerender = false;

import { Button } from "@runner/ui/components/button";
import { CalendarPlus, Search, UsersRound } from "lucide-react";
import Card from "../components/Card.astro";
import Hero from "../components/Hero.astro";
import SiteLayout from "../layouts/SiteLayout.astro";
---

<SiteLayout title="">
  <Hero />
  <!-- Call to Action Grid -->
  <main class="mx-auto max-w-7xl flex-1 px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid gap-8 md:grid-cols-3">
      <!-- Runner Race Search -->
      <Card
        title="Find Races"
        subtitle="Discover races near you, filter by distance, terrain, and difficulty."
        color="blue"
      >
        <Search slot="icon" className="h-10 w-10 text-blue-600" />
        <Button slot="cta">Search Races</Button>
      </Card>

      <!-- Event Coordinator Create Event -->
      <Card
        title="Create Events"
        subtitle="Easily manage and promote your running events with our intuitive platform."
        color="green"
      >
        <CalendarPlus slot="icon" className="h-10 w-10 text-green-600" />
        <a slot="cta" href={import.meta.env.PUBLIC_DASH_URL}>Create an Event</a>
      </Card>

      <!-- Local Running Groups -->
      <Card
        title="Join Communities"
        subtitle="Connect with local runners, find training groups, and share your passion."
        color="purple"
      >
        <UsersRound slot="icon" className="h-10 w-10 text-purple-600" />
        <Button slot="cta">Find Groups</Button>
      </Card>
    </div>
  </main>
</SiteLayout>
