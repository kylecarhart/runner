---
interface Props {
  title: string;
  subtitle: string;
  color: string;
}

const { title, subtitle, color } = Astro.props;
---

<div
  class="flex flex-col items-center rounded-xl border border-gray-200 bg-white p-6 text-center transition-all hover:shadow-xl"
>
  <div class="mb-4 flex justify-center">
    <div class={`bg-${color}-50 p-4 rounded-full`}>
      <slot name="icon" />
    </div>
  </div>
  <h2 class="mb-3 text-2xl font-bold text-gray-900">{title}</h2>
  <p class="mb-6 text-gray-600">{subtitle}</p>
  <slot name="cta" />
</div>
