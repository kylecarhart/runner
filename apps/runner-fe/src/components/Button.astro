---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "../utils/cn.ts";

const button = cva("", {
  variants: {
    intent: {
      default: "text-black border border-gray-500",
    },
    size: {
      default: "rounded-md px-4 py-2 text-base",
    },
  },
  defaultVariants: {
    intent: "default",
    size: "default",
  },
});

export interface Props
  extends HTMLAttributes<"button">,
    VariantProps<typeof button> {}

/**
 * For Astro components, we recommend setting your defaultVariants within
 * Astro.props (which are `undefined` by default)
 */
const { intent = "default", size = "default" } = Astro.props;
---

<button class={cn(button({ intent, size }))}>
  <slot />
</button>
