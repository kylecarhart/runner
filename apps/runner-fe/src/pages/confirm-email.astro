---
import ConfirmEmailForm from "../components/ConfirmEmailForm.tsx";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Signup">
  <div class="grid h-screen items-center justify-center bg-slate-50">
    <div
      class="rounded-xl border border-gray-200 p-12 sm:w-[500px] sm:bg-white sm:shadow-sm"
    >
      <div>
        <h1 class="text-3xl font-extrabold tracking-tight text-gray-900">
          Confirm Email
        </h1>
        <p class="mt-2 text-sm text-gray-500">
          Confirm your email address to complete the signup process. Enter the
          code sent to your email.
        </p>
      </div>
      <ConfirmEmailForm client:load />
    </div>
  </div>
</Layout>
